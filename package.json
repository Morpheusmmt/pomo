{
  "name": "pomodoro-app",
  "version": "1.0.0",
  "description": "Aplicativo Pomodoro utilizando React, TypeScript e Vite",
  "main": "index.js",
  "scripts": {
    "dev": "vite",                 // Comando para iniciar o servidor de desenvolvimento
    "build": "vite build",        // Comando para construir o projeto para produção
    "start": "vite preview",      // Comando para servir a build para testes locais
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx", // Opcional, caso queira configurar ESLint
    "format": "prettier --write ." // Opcional, para formatar o código usando Prettier
  },
  "keywords": [
    "pomodoro",
    "vite",
    "react",
    "typescript",
    "time-management"
  ],
  "author": "Maida Martins dos Santos", // Seu nome ou equipe
  "license": "MIT",                     // Licença do projeto
  "dependencies": {
    "react": "^18.2.0",                 // React
    "react-dom": "^18.2.0"             // React DOM
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.0.0",  // Plugin React para Vite
    "typescript": "^5.0.0",            // TypeScript
    "vite": "^4.0.0",                  // Vite
    "eslint": "^8.40.0",               // Opcional: ESLint para linting
    "eslint-plugin-react": "^7.33.0",  // Opcional: Plugin do ESLint para React
    "prettier": "^3.0.0"               // Opcional: Prettier para formatação de código
  },
  "type": "module",
  "engines": {
    "node": ">=16.0.0"                 // Versão mínima do Node.js recomendada
  }
}
